color_texto = #565a5c
color_icon = #01a0d7
color_header = #22bce0
color_cuerpo = #E8E8E8
color-enlace = #90CAF9
color-pie = #212121

@font-face {
	font-family: 'icon-social';
	src:url('../fonts/icomoon_red_social.eot?-z15pyw');
	src:url('../fonts/icomoon_red_social.eot?#iefix-z15pyw') format('embedded-opentype'),
		url('../fonts/icomoon_red_social.ttf?-z15pyw') format('truetype'),
		url('../fonts/icomoon_red_social.woff?-z15pyw') format('woff'),
		url('../fonts/icomoon_red_social.svg?-z15pyw#icomoon_red_social') format('svg');
	font-weight: normal;
	font-style: normal;
}

body
	background-color color_cuerpo
	font-family Arial
	font-size 16px
	
	//ESTILO DE LA CABECERA DE LA PAGINA
	.cabecera
		.cabecera-nav
			border-radius 0px
			.topHead
				background-color #fff
				//height 55px
				div
					a
						padding 0
						img
							height 60px
							width 60px
				ul
					li:hover
						background-color color-enlace
						//height 55px
						a
							color #fff
					li
						//height 55px
						border-left 2px solid color_cuerpo
						a
							background-color transparent
							color color_texto
							font-size 0.8em
							margin-top 0.5em
						.unete
							background-color color-enlace
							border-radius 0
							//height 290px
							padding 2em
							width 270px
							h3
								color #fff
								font-weight bold
								text-align left
							._usuario
							._pass
								background-color #fff
								border-radius 0
								font-size 1em
								padding 20px
								text-align center
							.btn-acceder
								border-radius 0
								
					.moneda
						ul
							border-radius 0
							padding 0
							margin 0
							width 160px
							li
								border 0
								border-radius 0
							li:last-child
								border-top: 1px solid color_cuerpo
							a
								font-size 1em
								margin 0
								padding 1em
								text-align left
						li:hover
							background-color #2196F3
					.moneda:hover ul
						background-color color-enlace
						display block
						margin 0
					.login:hover .unete
						display block
						margin 0
						button
							color #fff
							background-color #64B5F6
							font-size 1em
							font-weight normal
							&:hover
								background-color #42A5F5
		.cabecera-2	
			ol
				background-color color-enlace
				border-radius 0
				margin-top 80px
				li
					font-weight bold
					font-size 0.9em
					&:before
						content ""
					span
						color #fff
						font-size 0.8em
						margin-left 1em
					a
						color #fff
			/*.logo
				img
					height 75px
					width 75px*/
			.logo-tienda
				margin-top 5px
				a
					color color_texto
					font-style italic
					font-size 0.9em
					font-weight bold
					text-decoration none
					img
						height 100px
						width 100px

	//ESILO DE LA INFORMACION DEL PRODUCTO BUSCADO.
	section
		.barra-derecha
			.barra-titulo
				background-color #D9534F
				color #fff
				h3
					border-bottom 1px solid #FFEBEE
					padding 5px
				.item-votacion
					color #FFA000
				p
					font-size 0.8em
			.barra-detalle
				background-color #fff
				margin-top 3px
				.item-descripcion
					p
						color color_texto
						font-size 14px
						text-align left
				.item-detalle
					padding 1em
					p
						color color_texto
						font-size 0.9em
						margin 0
						span
							font-size 12px
							font-weight bold
							
			.barra-talla-color
				margin-top 3px
				span
					color color_texto
					font-size 12px
					font-weight bold
					margin-top 3px
				ul
					margin-left 3px	
					li
						background-color color-enlace
						border-radius 0
						padding 1em
				.item-talla
					background-color #fff
				.item-color
					background-color #fff
					padding 1em			
					.color_1
						background-color red
					.color_2
						background-color yellow
					.color_3
						background-color black
						
			.barra-precio-compartir
				.item-precio
					background-color #fff
					border-radius 0
					height 80px
					margin-top 3px
					padding 1em
					div
						color color_texto
						font-size 2.5em
						font-weight bold
					.badge
						background-color transparent
						color color_texto
						font-size 1em
						font-weight bold
				.item-compartir
					background-color #fff
					border-radius 0
					margin-top 3px
					padding 1em
					.item-icon
						a:first-child
							margin-left 1.5em
						a
							border-radius 0
							font-size 1.3em
							margin-right 0.5em							
						
		.panel-producto
			.titulo-panel
				background-color color-enlace
				padding 0.5em
				h4
					color #fff
					font-weight bold
					font-size 1em
					margin-left 0.5em
			.cuerpo-panel
				.resultados
					margin-top 1em
					.item-descripcion
						margin-bottom 0.8em
					.item-valor
						font-size 0.8em
					.item-desc
						color #f75d52
						font-size 1em
						font-style italic
					.item-votacion
						color #FFA000
						text-decoration none
						.item-num-vota
							color color_texto
							font-size 0.8em
							font-weight bold
							padding 0
			
	//ESTILO DE MAPA
	.aside
		border 2px solid color-enlace
		margin-bottom 1em
		padding-top 1.3em
		width 100%
		#mapa
			height 450px
			
	//ESTILO DE PIE DE PAGINA	
	footer
		background-color color-pie
		ul
			margin-top 1em
			li:not(:last-child)
				&:after
					border-right 1px solid #fff
					content ""
					font-size 10px
					margin-left 1.5em
			li
				a
					color #fff
					font-size 0.8em
					font-weight bold
					&:hover
						color color_header
						text-decoration none
		.iconos-sociales
			#icon_facebook
				&:after
					border-right 0
				a:before
					content "\ea8e  Facebook"
					color color_header
					font-family "icon-social"
					font-size 1.3em
			#icon_twitter
				&:after
					border-right 0
				a:before
					content "\ea93  Twitter"
					color color_header
					font-family "icon-social"
					font-size 1.3em
					
//APLICAMOS RESPONSIVE
@media screen and (max-width:768px)
//ESTILO PARA INFORMACION DEL PRODUCTO BUSCADO
	body
		
		.cabecera 
			.cabecera-nav 
				.topHead 
					ul 
						li
							border-left 0

		section
			.barra-derecha
				.barra-talla-color
					.item-talla
						ul
							li
								padding 1.2em
					.item-color
						ul
							li
								padding 1.2em
				.barra-precio-compartir
					.item-compartir
						padding 0
						.item-icon
							font-size 1.4em
							a:first-child
								margin-left 0
						
