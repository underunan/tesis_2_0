color_texto = #565a5c
color_icon = #01a0d7
//color_header = #22bce0
color-pie = #212121
color-enlace = #01a0d7

@font-face {
	font-family: 'icomoon';
	src:url('../fonts/icomoon.eot?-af2g17');
	src:url('../fonts/icomoon.eot?#iefix-af2g17') format('embedded-opentype'),
		url('../fonts/icomoon.ttf?-af2g17') format('truetype'),
		url('../fonts/icomoon.woff?-af2g17') format('woff'),
		url('../fonts/icomoon.svg?-af2g17#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

@font-face {
	font-family: 'icon-social';
	src:url('../fonts/icomoon_red_social.eot?-z15pyw');
	src:url('../fonts/icomoon_red_social.eot?#iefix-z15pyw') format('embedded-opentype'),
		url('../fonts/icomoon_red_social.ttf?-z15pyw') format('truetype'),
		url('../fonts/icomoon_red_social.woff?-z15pyw') format('woff'),
		url('../fonts/icomoon_red_social.svg?-z15pyw#icomoon_red_social') format('svg');
	font-weight: normal;
	font-style: normal;
}

body
	background #E8E8E8
	color color_texto
	font-family Arial
	font-size 16px
	
	.cabecera
		font-weight bold
		position absolute
		width 100%
		z-index 1000
		.cabecera-nav
			border-radius 0px
			.navbar-default 
				.navbar-collapse
					margin-top 0.4em
			.topHead
				background-color transparent
				border 0
				.navbar-brand
					padding 0
				a
					//padding 0
					img
						height 60px
						width 60px
				#btnMenu
					background-color color-enlace
				ul
					li:hover
						background-color color-enlace
					li
						a
							background-color transparent
							color #fff
							font-size 0.8em
							//margin-top 0.5em
	
	h1
		background-color 
		font-family "icomoon"
		font-size 2em
		font-weight bold
		text-align center

	.video_form
		padding 0
		position relative
		.formulario
			bottom 0
			position absolute
			text-align center
						
			div
				float left
				display inline-block
				margin:0
				
				input
					font-size 1em	
					padding 0 1.2em 0 1.2em
					text-align center
					margin 0
		
				button 
					border-radius 0
					box-shadow 0 5px 5px rgba(0,0,0,0.5)
	
	.informacion
		article
			background #fff
			border-radius 0 0 5px 5px;
			border-left 1px solid #ccc
			box-shadow 3px 3px 3px rgba(0,0,0,0.5)
			margin-top 0.5em
			text-align center
			.icon-brujula
				&:before
					content "\e949"
					color: color_icon
					font-family "icomoon"
					font-size 3.2em
			.icon-ubicacion
				&:before
					content "\e948"
					color color_icon
					font-family "icomoon"
					font-size 3.2em		
			.icon-computer
				&:before
					content "\e957"
					color color_icon
					font-family "icomoon"
					font-size 3.2em
			h2
				font-family "icomoon"
				font-size 1.8em
				font-weight bold
			div
				p
					font-family "icomoon"
					font-size 1em
	
	.resultados
		.item-descripcion
			margin-bottom 0.8em
			.item-valor
				font-size 0.8em
			.item-desc
				color #f75d52
				font-size 1em
				font-style italic
			.item-votacion
				color #FFA000
				text-decoration none
				.item-num-vota
					color color_texto
					font-size 0.8em
					font-weight bold
					padding 0
	footer
		background-color color-pie
		ul
			margin-top 1em
			li:not(:last-child)
				&:after
					border-right 1px solid #fff
					content ""
					font-size 10px
					margin-left 1.5em
			li
				a
					color #fff
					font-size 0.8em
					font-weight bold
					&:hover
						color color_header
						text-decoration none
		.iconos-sociales
			#icon_facebook
				&:after
					border-right 0
				a:before
					content "\ea8e  Facebook"
					color color_header
					font-family "icon-social"
					font-size 1.3em
			#icon_twitter
				&:after
					border-right 0
				a:before
					content "\ea93  Twitter"
					color color_header
					font-family "icon-social"
					font-size 1.3em
					

@media screen and (max-width: 768px) 
	.video_form
		.formulario
			width 100%
			div
				left 0
				width 100%
			
@media screen and (min-width: 769px) and (max-width:970px)
		
	.video_form
		.formulario
			width 100%
			div
				left 15%
	
	.tiendas
		.col-xs6
			width 33%
			.items
				font-size 14px
	
@media screen and (min-width: 971px)
	.video_form
		.formulario	
			width 100%
			div
				left 28%
	.tiendas
		.col-xs6
			.items
				font-size 14px
					
